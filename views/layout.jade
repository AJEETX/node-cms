doctype html
html
    head
        title #{title}
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')
        block head-css
        block head-js
    body
        .navbar.navbar-inverse.navbar-fixed-top
            .container
                .navbar-header
                    a.navbar-brand(href='/') CMS系统
                .collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li.active
                            a(href='/') 首页
                        li
                            a(href='/content') 内容
                        li
                            a(href='/user') 用户
                    .navbar-right
                        if (user)
                            | #{user.name} 
                            a(href='/user/logout') 注销
                        else
                            a(href='/user/login') 登录  
                            a(href='/user/register') 注册
        block content
        block foot-js