doctype html
html
    head
        title #{title}
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')
        block head-css
        block head-js
    body
        .navbar.navbar-inverse.navbar-fixed-top
            .container
                .navbar-header
                    a.navbar-brand(href='#{adminDir}/') 管理后台
                .collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li(class=!path ? 'active' : '')
                                a(href='#{adminDir}/') 首页
                        li(class=path === 'content' ? 'active' : '')
                                a(href='#{adminDir}/content') 内容
                        li(class=path === 'category' ? 'active' : '')
                                a(href='#{adminDir}/category') 分类
                        li(class=path === 'user' ? 'active' : '')
                                a(href='#{adminDir}/user') 用户
                        li(class=path === 'role' ? 'active' : '')
                                a(href='#{adminDir}/role') 角色
                    .navbar-right
                        if (user)
                            | #{user.name} 
                            a(href='#{adminDir}/user/logout') 注销
                        else
                            a(href='#{adminDir}/user/login') 登录  
                            a(href='#{adminDir}/user/register') 注册
        .content
            //each role in user.roles
                span #{role.actions.indexOf('hhhh')}
        block content
        block foot-js